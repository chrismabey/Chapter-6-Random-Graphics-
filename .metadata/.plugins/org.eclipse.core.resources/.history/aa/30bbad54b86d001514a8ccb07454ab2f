
import java.awt.*;
import java.applet.*;
import java.util.*; 
																
public class Lab06vst extends Applet
{
	public void paint(Graphics g) 	
	{
		// Draw Grid
		g.drawRect(10,10,780,580);
		g.drawLine(400,10,400,590);
		g.drawLine(10,300,790,300);
			
		// Draw Random Lines
		Random randLine = new Random(12345);
		for(int k = 1; k <= 500; k++){
			int x1 = (int)(Math.random()*400+10);
			int x2 = (int)(Math.random()*400+10);
			int y1 = (int)(Math.random()*300+10);
			int y2 = (int)(Math.random()*300+10);
			int red =(int)(Math.random()*256);
			int green =(int)(Math.random()*256);
			int blue =(int)(Math.random()*256);
			g.setColor(new Color(red,green,blue));
			g.drawLine(x1, y1, x2, y2);	
		}
		// Draw Random Squares
		Random randRect = new Random(12345);
		for(int k = 1; k <= 100; k++){
			int x1 = (int)(Math.random()*350+400);
			int y1 = (int)(Math.random()*230+20);
			int red =(int)(Math.random()*256);
			int green =(int)(Math.random()*256);
			int blue =(int)(Math.random()*256);
			g.setColor(new Color(red,green,blue));
			g.fillRect(x1, y1, 50, 50);	
		}
		// Draw Random Circles
		Random randCirc = new Random(12345);
		for(int k = 1; k <= 100; k++){
			int x1 = (int)(Math.random()*390+10);
			int x2 = (int)(Math.random()*200);
			int y1 = (int)(Math.random()*300+200);
			int red =(int)(Math.random()*256);
			int green =(int)(Math.random()*256);
			int blue =(int)(Math.random()*256);
			g.setColor(new Color(red,green,blue));
			g.drawOval(x1, y1, x2, x2);	
		}
		
		// Draw 3-D Box

	}
}  
